<!doctype html>

<html lang="en">
  <head>
    <title>Sinatra Store, by Aron.</title>
    <meta charset="utf-8">
    <!-- NetDNA Hosted Bootstrap 
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet"> -->
    <!-- Locally Hosted Bootstrap -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
    <!-- End Bootstrap -->

    <link rel="stylesheet" type="text/css" href="/styles.css">
  </head>

  <body>
    <a href="/" class="nodecoration">
      <div class="hero-unit trees">
        <h1>(s)t(o)r(e)</h1>
        <p>Cool stuff, picked by Aron.</p>
      </div>
    </a>
    <div class="container-fluid">
      
      <div class="row-fluid">
        <div class="span12">
          <nav class="btn-group">
            <a class="btn btn-large <%= request.path_info == "/" ? 'btn-primary' : '' %>" href="/">Home</a>
            <a class="btn btn-large <%= request.path_info.start_with?("/products") ? 'btn-primary' : '' %>" href="/products">Products</a>
            <a class="btn btn-large <%= request.path_info.start_with?("/users") ? 'btn-primary' : '' %>" href="/users">Users</a>
          </nav>
        </div>
      </div>

      <div class="row-fluid top-space">
        <div class="span12">
          <%= yield %>
        </div>
      </div>

    </div>

    <footer class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <p>&copy; Aron Hegyi 2013</p>
        </div>
      </div>
    </footer>
  </body>
</html>