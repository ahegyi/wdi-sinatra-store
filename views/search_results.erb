<h1>You searched for <%= @q %></h1>

<div class="container-fluid">
  <% @results["results"].each do |result| %>
    <div class="row-fluid top-space">
      <div class="span12">
        <img class="pull-left" src="<%= result["profile_image_url"] %>">
        <p class="pull-left" style="padding-left: 10px;" ><%= result["text"] %> (<a target="_blank" href="https://twitter.com/<%= result["from_user"] %>">@<%= result["from_user"] %></a>)</p>
      </div>
    </div>
    <br class="clearfix">
  <% end %>
</div>